<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/footerLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_foot"
    android:baselineAligned="true"
    android:padding="10dp"
    android:weightSum="4" >

    <Button
        android:id="@+id/footer_btn1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center"
        android:background="@drawable/foot_1" />

    <Button
        android:id="@+id/footer_btn2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
		android:background="@drawable/foot_2" />

    <Button
        android:id="@+id/footer_btn3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
		android:background="@drawable/foot_3" />

    <Button
        android:id="@+id/footer_btn4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        
        android:background="@drawable/foot_4" />

</LinearLayout>